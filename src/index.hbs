{{!< default}}

<div slot="content" class="home page-header" {{#if @blog.cover_image}}style="background-image: url({{@blog.cover_image}}); color: white;"{{/if}}>
    <div class="flex-center">
        <div class="header-container">
            <h1 class="site-title">{{@blog.title}}</h1>
            <h2 class="site-description">{{@blog.description}}</h2>
            <magnon-feedly-button user="{{@blog.title}}" id="{{@blog.url}}/rss/"></magnon-feedly-button>
        </div>
    </div>
</div>

<div class="post-grid" slot="content">
    {{#foreach posts}}
        {{> "post-card" index=@index}}
    {{/foreach}}
</div>
